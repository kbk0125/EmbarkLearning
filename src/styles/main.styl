body
	margin 0
	background-color #f1f1f1
	transition 250ms
@font-face
	font-family 'Roboto', sans-serif
h1, h2, h3
	color #404040
	font-family 'Roboto'
	font-weight 700
	margin 0
p, li, form, input, textarea, div
	color #999
	font-family 'Roboto'
	font-weight 400
	margin 0
input, textarea
	font-family inherit
a
	text-decoration none
	&:hover
		text-decoration underline

.actionBtn
	border-radius 2px
	background-color #63ACD9
	color white
	padding 0.5em 1em
	cursor pointer
.actionBtnMin
	border-radius 2px
	background-color #7979c7
	color white
	padding 0.5em 1em
	cursor pointer

.container
	/*position relative*/
	height 100%
	.comments
		bottom 8px
		right 8px
		position fixed
		font-size 14px
		z-index 11
		@media (max-width: 850px)
			display none
.search
	float right
	margin-top 3px
	background-color #ccc	
	border-radius 0 2px 2px 0
	position relative
	input
		padding 6px 4px
		width 250px
		font-size 14px
		border none
	i.fa-times
		position absolute
		top 5px
		font-size 18px
		right 37px
		cursor pointer
	i.fa-times.gone
		display none
	i.fa-search
		padding 0 8px 0 8px
		cursor pointer
		color #404040
.newPath
	border 2px solid #7979c7
	border-radius 4px
	position relative
	background-color #fafafa
	.fa-times
		position absolute
		cursor pointer
		font-size 1.5em
		top 3px
		right 7px
	.formWrap
		form
			margin 8px 8px 16px 12px
			.invis
				display none
			.chunk
				h3
					color #7979c7
					display inline-block
					@media (max-width: 1240px)
						font-size 16px
				select.curCat
					display inline-block
					margin 0
					color #999
					margin-left 16px
					font-weight 400
					font-size 14px
					width 150px
					@media (max-width: 600px)
