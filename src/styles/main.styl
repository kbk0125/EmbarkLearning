/* ANIMATIONS */
/*http://stackoverflow.com/questions/3331353/transitions-on-the-display-property */

.hide
	height 0
	width 0
	opacity 0
	visibility hidden !important
	padding 0 !important
	margin 0 !important
	transition visibility 0s, opacity 0.5s swing, height 0.5s swing
.show
	transition visibility 0s, opacity 0.5s linear, height 0.5s linear
	visibility visible !important
	height auto
	width auto
	opacity 1 !important
