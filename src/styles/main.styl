				.formBtn
					border none
					position absolute
					font-size 14px
					bottom 4px
					right 4px
					@media (max-width: 1240px)
						position initial
						float right
						margin-top 8px
						margin-right 8px
					@media (max-width: 850px)
						float none
						display block
						margin-top 16px
				.ui-buttonset
					display inline-block
					input
						display none
					label
						float left
						padding 4px 8px
						font-size 1em
						font-weight 400
						font-family inherit
						cursor pointer
